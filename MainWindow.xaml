<Window x:Class="DroneCare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneCare"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="DroneCare" Height="600" Width="1000">
    <Grid>
        <Label x:Name="LB_ClientName" Content="Client Name:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LB_DroneModel" Content="Drone Model:" HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LB_ServiceCost" Content="Service Cost:" HorizontalAlignment="Left" Margin="20,80,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="TBK_ServiceProblem" HorizontalAlignment="Left" Margin="24,114,0,0" TextWrapping="Wrap" Text="Service Problem:" VerticalAlignment="Top" Width="83"/>
        <Label x:Name="LB_ServiceTag" Content="Service Tag:" HorizontalAlignment="Left" Margin="20,210,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="TB_ClientName" HorizontalAlignment="Left" Margin="120,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_DroneModel" HorizontalAlignment="Left" Margin="120,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TB_ServiceCost" HorizontalAlignment="Left" Margin="120,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox" Text="0"/>
        <TextBox x:Name="TB_ServiceProblem" HorizontalAlignment="Left" Margin="120,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="85.92" VerticalScrollBarVisibility="Auto"/>
        <xctk:IntegerUpDown Name="UD_ServiceTag" HorizontalAlignment="Left" Margin="120,210,0,0" Width="120" Height="23" VerticalAlignment="Top" AllowTextInput="False" Increment="10" Minimum="100" Maximum="900" Text="100" />
        <RadioButton x:Name="RBT_Regular" Content="Regular" HorizontalAlignment="Left" Margin="24,244,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="RBT_Express" Content="Express" HorizontalAlignment="Left" Margin="124,244,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BT_AddDrone" Content="Add Drone to Queue" HorizontalAlignment="Left" Margin="24,274,0,0" VerticalAlignment="Top" MinWidth="215" Click="AddNewItem"/>

        <TextBox x:Name="TB_ErrorMessage" Margin="0,0,0,20" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="960" Height="54" Foreground="Red" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Text="ERROR MESSAGE:"/>

        <Label x:Name="LB_RegularQueue" Content="Regular Queue" HorizontalAlignment="Left" Margin="300,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BT_RegularQueue" Click="RemoveRegularQueue" Content="Remove From Queue" HorizontalAlignment="Left" Margin="600,20,0,0" VerticalAlignment="Top" MinWidth="150"/>
        <ListView x:Name="LVW_RegularQueue" SelectionChanged="DisplaySelectedRegularDrone" Margin="300,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="450" Height="170">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="90" DisplayMemberBinding="{Binding clientName}"/>
                    <GridViewColumn Header="Model" Width="90" DisplayMemberBinding="{Binding droneModel}"/>
                    <GridViewColumn Header="Cost" Width="90" DisplayMemberBinding="{Binding serviceCost}"/>
                    <GridViewColumn Header="Problem" Width="90" DisplayMemberBinding="{Binding serviceProblem}"/>
                    <GridViewColumn Header="Tag" Width="90" DisplayMemberBinding="{Binding serviceTag}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label x:Name="LB_ExpressQueue" Content="Express Queue" HorizontalAlignment="Left" Margin="300,240,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BT_ExpressQueue" Click="RemoveExpressQueue" Content="Remove From Queue" HorizontalAlignment="Left" Margin="600,240,0,0" VerticalAlignment="Top" MinWidth="150"/>
        <ListView x:Name="LVW_ExpressQueue" SelectionChanged="DisplaySelectedExpressDrone" Margin="300,270,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="450" Height="170">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="90" DisplayMemberBinding="{Binding clientName}"/>
                    <GridViewColumn Header="Model" Width="90" DisplayMemberBinding="{Binding droneModel}"/>
                    <GridViewColumn Header="Cost" Width="90" DisplayMemberBinding="{Binding serviceCost}"/>
                    <GridViewColumn Header="Problem" Width="90" DisplayMemberBinding="{Binding serviceProblem}"/>
                    <GridViewColumn Header="Tag" Width="90" DisplayMemberBinding="{Binding serviceTag}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label x:Name="LB_FinishedList" Content="Finished List" HorizontalAlignment="Left" Margin="800,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BT_FinishedList" Click="RemoveSelectedFinishedList" Content="Remove Selected Drone" HorizontalAlignment="Left" Margin="800,420,0,0" VerticalAlignment="Top" MinWidth="150"/>
        <ListBox x:Name="LBX_FinishedList" MouseDoubleClick="RemoveSelectedFinishedList" Margin="800,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="360">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding clientName}" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding serviceCost}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
